.container
  .row
    .col-lg-4
      div(align="center")
        label INGRESO DE PREGUNTAS
          section(id="Ingreso")
            form#nuevaPreguntaForm(name="crearPreguntaForm")
              .panel.panel-default(id="IngresoEnunciado")
                .form-group
                  label.pull-left(for="enunciado") Enunciado
                  br
                .input-group
                  .input-group-addon
                    i.glyphicon.glyphicon-bookmark
                textarea.form-control(rows="3", type="text", name="enunciado", ng-required="true", id="enunciado", ng-model="pregunta.enunciado")
              br
              .panel.panel-default(id="SubIngreso")
                .form-group
                  label.pull-left(for="descripcion") Respuesta
                  br
                .input-group
                  span.input-group-addon
                    input(type="checkbox", name="", value="")
                  textarea.form-control(rows="2", type="text", name="descripcion", ng-required="true", id="descripcion", ng-model="respuesta.descripcion")
                button.btn.btn-primary.btn-xs.pull-right(type="button", ng-click="addOpcionRespuesta(respuesta)") Agregar

    .col-lg-8
      form
        h3 Pregunta:
        label {{pregunta.enunciado}}
        ul(ng-repeat="datos in conjuntoOpciones")
          input(type="checkbox", name="{{'item' + 1}}", value="")
          | {{datos}}
        button.btn.btn-primary.btn-xs.pull-right(type="button", ng-show="pregunta.enunciado", ng-click="guardar(pregunta)") Guardar




